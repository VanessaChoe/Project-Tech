<section>
    <img src="/<%=travelbuddy.image%>" alt="TravelBuddy Profile Image">

        <% if(travelbuddy.like==true){ %>

            <form action="/unlike" method="post">

                <button name="unlike" type="submit" value="<%= travelbuddy._id %>">
                    <img src="/images/roodHartje.png" alt="Unlike button">
                </button> 

            </form>

        <% } else{ %>

            <form action="/like" method="post">

                <button name="like" type="submit" value="<%= travelbuddy._id %>">
                    <img src="/images/hartje.png" alt="Like button">
                </button>

            </form>

        <%} %>

    <ul>
        <li>Naam: <%=travelbuddy.naam%></li>
        <li>Geslacht: <%=travelbuddy.geslacht%></li>
        <li>Continent: <%=travelbuddy.continent%></li>
        <li>land:  <%=travelbuddy.land%></li>
    </ul>
</section>

